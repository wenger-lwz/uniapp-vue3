	  <div style="width: 100%">
		<input type="hidden" name="quantity" value="1"/>	  
        <button data-click="{% if action == 1 %}submit{% else %}addToCart{% endif %}" class="btn btn-primary xfcart-add-to-cart__btn xfcart-add-to-cart-square__btn">
            {% if action == 1 %}
			{{ langs.product.product_detail.buy_now | t }}
		   {% else %}
            {{ langs.product.product_detail.add_to_cart | t }}
		   {% endif %}
        </button>
      </div>	  
    </div>
    {% endif %}  

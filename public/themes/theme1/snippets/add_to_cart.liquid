$(function () {
	var variant_type = '{{vtype}}';
	$('.product-info__variants_items select').change(function(e){
		var texs = [];		
		setTimeout(function () {
			$('.product-info__variants_items select').find("option:selected").each(function(){
				texs.push($(this).text());
			});
			$('.vartitle').html(texs.join('/'));	
		},500);	
		if(!e.originalEvent){return;}
		var val = $(this).val();
		var id = $(this).find("option:selected").attr('id');
		$('.xfcart-add-to-cart select').find('option[id="'+id+'"][value="'+val+'"]').prop("selected",true);
	});
	$('.product-info__variants_value label').click(function(e){
		var texs = [];
		setTimeout(function () {
			$('.product-info__variants_value input[type="radio"]:checked').each(function(){
				texs.push($(this).val());
			});
			$('.vartitle').html(texs.join('/'));
		},500);
		if(!e.originalEvent){return;}
		var val = $(this).attr('data-variants-value');
		var id = $(this).attr('for');
		$('.xfcart-add-to-cart select').find('option[id="'+id+'"][value="'+val+'"]').prop("selected",true);
	});
	$('.xfcart-add-to-cart select').change(function(){
		var val = $(this).val();
		var id = $(this).find("option:selected").attr('id');
		if(variant_type == 'button'){
			$('.product-info__variants_value').find('label[for="'+id+'"][data-variants-value="'+val+'"]').trigger('click');
		}else{
			$('.product-info__variants_items select').find('option[id="'+id+'"][value="'+val+'"]').prop("selected",true).trigger('change');
		}
	});
	var isshow = false;
	$(window).on('scroll',function(){
		var top = $(window).scrollTop();
		var btntop = $('.product-info__btn').offset().top;
		if(btntop<top){
			if(isshow)return;
			isshow = true;
			$('.xfcart-add-to-cart').css({'top':'unset','bottom':'0px','z-index':'98','max-height':'300px','position':'unset'});
		}else{
			if(!isshow)return;
			isshow = false;	
			$('.xfcart-add-to-cart').css({'top':'unset','bottom':'-100%','z-index':'98','max-height':'0px','position':'initial'});
		}
	});
});
</script>

    {% if section.settings.name or section.settings.name == nil %}
      {% assign showHr = true %}
      <div class="collection__title xf_skin_title_font col-12">{{collection.title}}</div>
    {% endif %}
    {% if section.settings.desc or section.settings.desc == nil %}
      {% if collection.description != '' %}
        {% assign showHr = true %}
        <div class="collection__desc col-12">{{collection.description}}</div>
      {% endif %}
    {% endif %}
    {% if showHr %}
      <hr class="collection__hr">
    {% endif %}
  </div>
  {% comment %} 专辑商品列表 {% endcomment %}
  <div class="row">
    {% assign content_col = 'col-12 col-md-12' %}
    {% assign product_col = 'col-6 col-md-3' %}
    {% if section.settings.filter %}
      {% assign content_col = 'col-12 col-md-9' %}
      {% assign product_col = 'col-6 col-md-4' %}
      <div class="col-md-3">
        <div class="collection-filter__wrapper">
           <div class="collection-filter">
            <div class="collection-filter__title">{{ langs.collection.collection_detail.filter_by }}</div>
            {% for block in section.blocks %}
              {% comment %} 价格标签处理 {% endcomment %}
              {% if block.type == 'price_filter' %}
                {% assign is_last_price_show = false %}
                {% if block.settings.is_last_price_show or block.settings.is_last_price_show == nil %}
                  {% assign is_last_price_show = true %}
                {% endif %}
                {% assign tags = block.settings.tags | price_range: is_last_price_show %}
              {% endif %}
              {% comment %} 普通标签处理 {% endcomment %}
              {% if block.type == 'tag_filter' %}
                {% if block.settings.is_all_tags_show or block.settings.is_all_tags_show == nil %}
                  {% comment %} 全部标签 {% endcomment %}
                  {% assign tags = collection.tags %}
                {% else %}
                  {% assign tags = block.settings.tags | downcase | split: ',' | uniq %}
                {% endif %}
              {% endif %}
              {% if tags.size > 0 %}
                <div class="collection-filter__item" data-type="{{block.type}}">
                  <h3 class="collection-filter__item-title">{{block.settings.title}}</h3>
                  <div class="collection-filter__item-select">
                    {% for tag in tags %}
                      {% assign tag = tag | strip %}
                      {% comment %} 普通标签需要有效，价格标签直接输出 {% endcomment %}
                  {% if block.type == 'tag_filter' and collection.tags contains tag  or block.type == 'price_filter' %}

                      <div class="custom-control custom-radio">
                        <input type="radio" id="{{block.settings.title}}_{{tag}}_{{block.id}}_{{forloop.index}}" value="{{tag}}" name="{{block.settings.title}}_{{block.id}}" class="custom-control-input">
                        <label class="custom-control-label" for="{{block.settings.title}}_{{tag}}_{{block.id}}_{{forloop.index}}">{{tag}}</label>
                      </div>
                      {% endif %}
                    {% endfor %}
                  </div>
                </div>
              {% endif %}
            {% endfor %}
            <div class="collection-filter__footer d-none d-md-block">
              <button class="collection-filter-clear btn btn-primary form-control">{{ langs.collection.collection_detail.clear_all }}</button>
            </div>
            <div class="collection-filter__footer d-md-none">
              <button class="collection-filter-clear btn btn-secondary form-control">{{ langs.collection.collection_detail.clear_all }}</button>
              <button class="btn btn-primary form-control collection-filter__footer-confirm">{{ langs.collection.collection_detail.confirm }}</button>
            </div>
          </div>
        </div>
      </div>
    {% endif %}
    <div class="{{content_col}}">
      {% comment %} 排序部分 {% endcomment %}
      <div class="collection__sort d-flex align-items-center justify-content-between" style="flex-wrap:wrap;">
        <span class="collection__number">{{ langs.collection.collection_detail.products | t: count: collection.products_count }}</span>
        {% if section.settings.sort or section.settings.sort == nil %}
          {% assign show_sort = true %}
        {% endif %}
        <div class="d-flex justify-content-between collection__filter-buttons {% if section.settings.filter %}collection__filter-buttons_has-filter{% endif %}">
          {% if section.settings.filter %}
            <button
              class="d-md-none form-control btn btn-primary collection__filter-by"
              {% if show_sort %}
              style="margin-right: 8px;"
              {% endif %}>
              {{ langs.collection.collection_detail.filter_by }}
            </button>
          {% endif %}
          {% if show_sort %}
            <span class="collection__sort-select d-flex align-items-center" style="margin-left: 8px;">
              {% if collection.products_count > 0 %}
                {% assign recomend = langs.collection.collection_detail.recommend %}
                {% assign low_to_high = langs.collection.collection_detail.low_to_high %}
                {% assign high_to_low = langs.collection.collection_detail.high_to_low %}
                {% assign best_selling = langs.collection.collection_detail.best_selling %}
                {% assign newest = langs.collection.collection_detail.newest %}
                {% assign sales_descending = langs.collection.collection_detail.sales_descending %}
                {% assign add_to_cart_count_descending = langs.collection.collection_detail.add_to_cart_count_descending %}
                {% assign views_descending = langs.collection.collection_detail.views_descending %}

                {% assign manual = "@manual|" %}
                {% assign price_ascending = "@price-ascending|" %}
                {% assign price_descending = "@price-descending|" %}
                {% assign best_selling_tag = "@best-selling|" %}
                {% assign published_descending = "@published-descending|" %}
                {% assign sales_descending_value = '@best-selling|' %}
                {% assign add_to_cart_count_descending_value = '@add_to_cart_count|' %}
                {% assign views_descending_value = '@views' %}
                {% comment %} {% assign options = recomend | append: manual | append: low_to_high | append: price_ascending | append: high_to_low | append: price_descending | append: best_selling | append: best_selling_tag | append: newest | append: published_descending | append: sales_descending | append: sales_descending_value | append: add_to_cart_count_descending_value | append: add_to_cart_count_descending | append: views_descending_value | append: views_descending %} {% endcomment %}
              {% assign options = recomend | append: manual | append: low_to_high | append: price_ascending | append: high_to_low | append: price_descending | append: newest | append: published_descending | append: sales_descending | append: sales_descending_value | append: add_to_cart_count_descending | append: add_to_cart_count_descending_value | append: views_descending | append: views_descending_value %}
                <span class="d-none d-md-block collection__sort-label" style="margin-right: 16px;">{{ langs.collection.collection_detail.sort_by }}</span>

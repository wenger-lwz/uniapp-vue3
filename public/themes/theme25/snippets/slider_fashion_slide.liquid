{% assign src = image.settings.src %}
{% assign mobile_src = image.settings.mobile_src | default: src %}

<div class="tw-relative tw-flex tw-outline-none slider-{{section.id}}-{{forloop.index0}}-wrapper" data-color="{{image.settings.transform_btn_text_color}}">
  <div class="tw-box-border tw-absolute tw-z-20 slider-{{section.id}}-content {% if image.settings.layout == 'image_on_right' %}tw-left-0 tw-pl-5 lg:tw-pl-40 {%else%} tw-right-0 tw-pr-5 lg:tw-pr-40 {% endif %} tw-bottom-0 lg:tw-bottom-15 tw-top-0">
    <div class="tw-relative tw-top-1/2 tw-transform tw--translate-y-1/2">
      {% if image.settings.sub_title %}
        <h3 style="color:{{image.settings.sub_title_color}}" class="tw-m-0 tw-mb-2 lg:tw-mb-4 tw-text-xs lg:tw-text-sm tw-leading-none tw-tracking-2 lg:tw-tracking-4 {% if image.settings.sub_title_uppercase %}tw-uppercase{% endif %} type-heading-font-family">{{image.settings.sub_title}}</h3>
      {% endif %}
      {% if image.settings.title %}
        <h2 style="color:{{image.settings.title_color}}" class="tw-m-0 tw-font-bold tw-text-2xl lg:tw-text-10 tw-leading-1.3 tw-tracking-normal tw-mb-2 lg:tw-mb-6 {% if image.settings.title_uppercase %}tw-uppercase{% endif %} type-heading-font-family slider-title" >{{image.settings.title}}</h2>
      {% endif %}
      {% if image.settings.desc %}
        <p style="color:{{image.settings.text_color}}" class="tw-m-0 tw-text-sm lg:tw-text-lg tw-mb-5 lg:tw-mb-12 tw-leding-1.3 lg:tw-leading-1.5">{{image.settings.desc}}</p>
      {% endif %}
      {% if image.settings.btn_text %}
        <a style="background-color:{{image.settings.btn_bg_color}};border-color:{{image.settings.btn_border_color}};color:{{image.settings.btn_text_color}}" class="{%if settings.general_style == 'round'%}tw-rounded{%endif%} tw-text-center tw-inline-block tw-box-border tw-min-w-28 lg:tw-min-w-38 tw-leading-none tw-py-3 tw-px-5 tw-text-btn-font-size tw-no-underline tw-border tw-border-solid tw-outline-none tw-tracking-btn-letter-spacing {%if settings.type_button_same_with == 'heading'%}type-heading-font-family{%else%}type-text-font-family{%endif%} {%if settings.type_button_text_uppercase_on%}tw-uppercase{%endif%} " href="{{image.settings.btn_href.url}}" {% unless image.settings.btn_href.type != 'web' or image.settings.btn_href.url contains shop.domain %} target="_blank" {% endunless %}>{{image.settings.btn_text}}</a>
      {% endif %}
    </div>
  </div>
  <div class="tw-w-2/3 tw-box-border tw-z-10 {% if image.settings.layout == 'image_on_right' %}tw-ml-auto{%else%} tw-mr-auto{% endif %}">
    <div class="tw-relative slider-{{section.id}}-{{forloop.index0}}">
      {% if src %}
        <img class="tw-absolute tw-w-full {% unless forloop.index0 == 0 %}lazy-{% endunless %}lazyload" src="{{shop.default_img}}" data-srcs="{{mobile_src  | img_url: '{width}x' }},{{src  | img_url: '{width}x' }}"  data-sizes="auto" alt="{{ item.alt | escape }}">
      {% else %}
        {{ 'image' | placeholder_svg_tag: 'tw-absolute tw-block tw-fill-svg tw-bg-svg' }}
      {% endif %}
    </div>
  </div>
  {% assign opacity = image.settings.overlay_opacity  | divided_by:100 %}
</div>
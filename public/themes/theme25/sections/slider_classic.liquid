{% assign default_ratio = 40.4 %}
{% assign md_default_ratio = 100 %}
<style type="text/css">
  {% for block in section.blocks %}
    .slider-{{section.id}}-{{forloop.index0}}-sub_title{color:{{block.settings.sub_title_color}}}
    .slider-{{section.id}}-{{forloop.index0}}-title{color:{{block.settings.title_color}}}
    .slider-{{section.id}}-{{forloop.index0}}-desc{color:{{block.settings.text_color}}}
    .slider-{{section.id}}-{{forloop.index0}}-btn{background-color:{{block.settings.btn_bg_color}};color:{{block.settings.btn_text_color}}}
    @media (max-width: {{settings.breakpoint}}px) {
      .slider-{{section.id}}-{{forloop.index0}}-sub_title{color:{{block.settings.md_sub_title_color}}}
      .slider-{{section.id}}-{{forloop.index0}}-title{color:{{block.settings.md_title_color}}}
      .slider-{{section.id}}-{{forloop.index0}}-desc{color:{{block.settings.md_text_color}}}
      .slider-{{section.id}}-{{forloop.index0}}-btn{background-color:{{block.settings.md_btn_bg_color}};color:{{block.settings.md_btn_text_color}}}
    }
  {% endfor %}
  {% unless section.settings.is_full_screen %}
    {% assign slider_pb = 0 %}
    {% for block in section.blocks %}
      {% assign src = block.settings.src %}
      {% if src %}
        {% assign ratio = 40.4 %}
      {% else %}
        {% assign ratio = default_ratio %}
      {% endif %}
      {% if ratio > slider_pb %}
        {% assign slider_pb = ratio %}
      {% endif %}
      .slider-{{section.id}}-{{forloop.index0}}{ padding-bottom:{{ratio}}%; }
    {% endfor %}
    .slides-{{section.id}}{ padding-bottom: {{slider_pb}}%;}

    @media (max-width: {{settings.breakpoint}}px) {
      {% assign mobile_slider_pb = 0 %}
      {% for block in section.blocks %}
        {% assign src = block.settings.src %}
        {% assign mobile_src = block.settings.mobile_src | default: block.settings.src %}
        {% if mobile_src %}
          {% assign mobile_ratio = 100 %}
        {% else %}
          {% assign mobile_ratio = md_default_ratio %}
        {% endif %}
        {% if mobile_ratio > mobile_slider_pb %}
          {% assign mobile_slider_pb = mobile_ratio %}
        {% endif %}
        .slider-{{section.id}}-{{forloop.index0}}{ padding-bottom:{{mobile_ratio}}%; }
      {% endfor %}
      .slides-{{section.id}}{ padding-bottom: {{mobile_slider_pb}}%;}
    }
  {% endunless %}
  .slider-{{section.id}}-content{padding:0 140px;}
  @media (max-width: {{settings.breakpoint}}px) {
    .slider-{{section.id}}-content{padding:0 80px;}
  }

  {% if section.settings.is_full_screen %}
  .slider-{{section.id}}-item, .slides-{{section.id}}{
    padding-bottom:calc( 100vh - var(--header-height,"0px") );
  }
  @media (max-width: {{settings.breakpoint}}px) {
    .slider-{{section.id}}-item, .slides-{{section.id}}{
      padding-bottom:calc( 100vh - var(--mobile-header-height,"0px") );
    }
  }
  {% endif %}

  {% if section.settings.enable_snowflake_effect %}
    @keyframes lezadasnow {
      0% {
        transform: translate(-25%, -50%)
      }
      100% {
        transform: translate(0, 0)
      }
    }
    .snow_effect::before {
      background-image: url(data:image/png;base64,), url(data:image/png;base64,);
      animation: lezadasnow 18s linear infinite;
      position: absolute;
      width: 150%;
      content: '';
      height: 300%;
      top: 0;
      left: 0;
      z-index: 1;
      pointer-events: none;
      background-color: rgba(0, 0, 0, 0);
    }
  {% endif %}

</style>
<div class="tw-relative tw-group {% if section.settings.enable_snowflake_effect %}snow_effect tw-overflow-hidden{% endif %}">
  {% include "slides", slide: 'slider_classic_slide', id: section.id, images: section.blocks%}
  {% if section.blocks.size > 1 %}
    {% assign btn_bg_color = section.blocks[0].settings.btn_bg_color | default: '#000' %}
    {% unless btn_bg_color contains '#' %}
      {% assign btn_bg_color = btn_bg_color | color_to_hex %}
    {% endunless %}
    {% assign btn_bg_color_mixed = btn_bg_color | color_modify: 'alpha', 0.5 %}
    <a style="background:{{btn_bg_color_mixed}};color:{{section.blocks[0].settings.btn_text_color}}" href="javascript:;" class="tw-shadow-3 tw-absolute tw-rounded-full tw-inset-0 tw-right-auto tw-top-1/2 tw--mt-6 tw-ml-7 tw-text-btn-bg-color tw-no-underline tw-h-12 tw-w-12 tw-justify-center tw-items-center tw-hidden {%if section.settings.hover_transform %} lg:group-hover:tw-flex{% else %}lg:tw-flex{% endif %} tw-transform tw-transition-transform tw-duration-300 hover:tw-scale-110 slides-{{section.id}}-arrow" data-direction="prev">
      {% include 'icon_arrow',icon_class:"tw-fill-current" %}
    </a>
    <a style="background:{{btn_bg_color_mixed}};color:{{section.blocks[0].settings.btn_text_color}}" href="javascript:;" class="tw-shadow-3 tw-absolute tw-rounded-full tw-inset-0 tw-left-auto tw-top-1/2 tw--mt-6 tw-mr-7 tw-text-btn-bg-color tw-no-underline tw-h-12 tw-w-12 tw-justify-center tw-items-center tw-hidden {%if section.settings.hover_transform %} lg:group-hover:tw-flex{% else %}lg:tw-flex{% endif %} tw-transform tw-transition-transform tw-duration-300 hover:tw-scale-110 slides-{{section.id}}-arrow" data-direction="next">
      {% include 'icon_arrow',icon_class:"tw-transform tw-rotate-180 tw-fill-current"%}
    </a>
  {% endif %}
</div>
{% if section.blocks.size > 1 %}
  {% javascript %}
    $(function(){
      $slides = $('.slides-{{section.id}}');
      $slides.slides({
        autoplay: '{{section.settings.is_auto_play}}',
        autoplaySpeed: {{section.settings.interval | times : 1000}},
      });
      $slides.on('beforeChange', function(e, {nextSlide}){
        var idx = nextSlide.index;
        var $next = nextSlide.$slide;
        $(".slides-{{section.id}}-arrow").css({
          "color": $next.find('.slider-{{section.id}}-'+idx).data('color'),
          "background": $next.find('.slider-{{section.id}}-'+idx).data('bg'),
        });
      })
    })
  {% endjavascript %}
{% endif %}


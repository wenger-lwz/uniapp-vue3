<!doctype html>
<html class="no-js" lang="{{ shop.locale }}" {% if shop.locale == "ar-SA" %}dir="rtl"{% endif %}>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no,viewport-fit=cover">
   
    <meta http-equiv="x-dns-prefetch-control" content="on">
    <link rel="dns-prefetch" href="{{shop.cdn_domain}}">
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="shortcut icon" href="{{shop.favicon}}">
    <meta name="theme-color" content="{{ settings.color_primary }}">
    <meta name="format-detection" content="telephone=no, email=no">
    {{ content_for_header }}
    {% include 'settings' %}
    {% include 'theme_css' %}
    <script>
      {% assign off = langs.product.product_detail.off | t | json | replace: '{{ count }}', '{ count }' %}
      {% assign save_html = langs.product.product_detail.save_html | t | json | replace: '{{ saved_amount }}', '{ saved_amount }' %}
      window.SHOP_PARAMS = {
		theme_name:"{{template.name}}",
		theme_version:"{{template.version}}",
        customer_id: '{{customer.id}}',
        finance: '{{shop.finance}}',
        finance_symbol: '{{shop.finance_symbol}}',
        cdn_domain: '{{shop.cdn_domain}}',
        shop_name: '{{shop.name | escape}}',
        theme_id: '{{theme.id}}',
        shop_id: '{{shop.id}}',
        shop_env: '{{shop.env}}',
        default_img: '{{shop.default_img}}',
        template_name: '{{template.name}}',
        template_type: '{{template.type}}',
        form_lang: { invalid_characters:{{ langs.checkout.form.invalid_characters | t | json }} },
        borderRadius:{% if settings.general_style == 'round' %}true{% else %}false{% endif  %},
        product_lang:{
          added_to_cart_successfully:{{ langs.product.product_detail.added_to_bag_successfully | t  | json }},
          select_variant:{{ langs.product.product_detail.select_variant | t | json}},
          off: {{ off }},
          save_html: {{ save_html }}
        },
        product_settings: {
          add_to_cart_process:{{ settings.add_to_cart_process | default: "drawer" | json }},
        },
      }
      window.breakpoint = {{settings.breakpoint}};
      window.disabled_exts=["global_version", "share_product", "blog_products", "boowc", "buy_on_others"];
    </script>
    {% include 'tailwind' %}</head>
  <body class="nova tw-bg-bg-color tw-text-text-color tw-text-text-font-size type-text-font-family tw-leading-text-line-height tw-m-0 template-{{template.name}} {% if settings.general_style == 'round' %}theme-rounded{% endif %}" >
    {% assign sys_pages = "login, register, reset_success, addresses, couponCollection, article, rebateCollection, reset_password, flashsaleCollection, order" | split: ", " %}
    {% comment %} 满送SHOP_PARAMS.template_name为空{% endcomment %}
    {% assign sys_pages_type = "43" %}
    {% include 'art_template' %}
    {% include 'serial_list' %}
    {% include 'util' %}
    {% include 'theme_js' %}
    {% include 'lazysizes' %}
    <div class="page_container"><div class="bootstrap">{{ content_for_layout }}</div></div>
    {% include 'product_art_tpl' %}    
    {{ content_for_js }}
    {% include 'cart_drawer' %}
    {% comment %}关闭 svg {% endcomment %}
    <div class="tw-hidden" id="close_svg">{% include 'icon_close_btn', icon_class: '' %}</div>
    {% comment %}success svg {% endcomment %}
    <div class="tw-hidden" id="success_svg">{% include 'icon_ok',icon_class: '' %}</div>
    {% comment %}error svg {% endcomment %}
    <div class="tw-hidden" id="error_svg">{% include 'icon_error',icon_class: '' %}</div>

    {% include 'structured_data' %}
    {% include 'quick_view_tpl' %}
  </body>
</html>
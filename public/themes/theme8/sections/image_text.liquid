<style>@media (min-width: 768px) {
  .image-text {
    justify-content: space-between; }
    .image-text .px-14 {
      padding-left: 140px !important;
      padding-right: 140px !important; } }

@media (max-width: 767.98px) {
  .image-text {
    flex-direction: column; } }

@media (max-width: 767.98px) {
  .image-text__image {
    width: 100%;
    margin-bottom: 1.25rem;
    order: 0; } }

@media (min-width: 768px) {
  .image-text__image {
    width: 50%; } }

@media (max-width: 767.98px) {
  .image-text__image_m {
    margin-top: 1.25rem; } }

@media (max-width: 767.98px) {
  .image-text__text {
    order: 1;
    text-align: center; } }

@media (min-width: 768px) {
  .image-text__text {
    width: 40%; } }

.image-text__title {
  font-size: 1.5rem;
  font-weight: 500;
  margin-bottom: 1.25rem; }
  @media (min-width: 768px) {
    .image-text__title {
      font-size: 1.875rem;
      margin-bottom: 1.5rem; } }

.image-text__desc {
  font-size: 16px; }

.image-text__btn {
  max-width: 21.5625rem;
  margin-top: 0.5625rem;
  padding: 0.625rem 1.875rem; }
  @media (max-width: 767.98px) {
    .image-text__btn {
      margin-bottom: 1.25rem; } }
  @media (min-width: 768px) {
    .image-text__btn {
      max-width: 12.5rem;
      margin-top: 2.125rem; } }
</style>
<div style="background:{{section.settings.title_bg_color}};">
<div class="{% unless section.settings.is_width_across_screen %}container container-gap{% endunless %}">
  {% assign layout = section.settings.layout | default: 'left' %}
  {% assign text_layout = section.settings.text_layout | default: 'left' %}
  {% assign title_color = section.settings.title_color  %}
  {% assign text_color = section.settings.text_color %}
  {% assign button_border_color= section.settings.button_border_color  %}
  {% assign button_bg_color= section.settings.button_bg_color  %}
  {% assign button_color= section.settings.button_color  %}
  {% assign  image= section.settings.image %}
{% assign  link_to_url= section.settings.link_to_url %}
{% assign  layout= layout %}
{% assign  title= section.settings.title %}
{% assign  desc= section.settings.desc %}
{% assign  button_label= section.settings.button_label %}
{% assign  button_link= section.settings.button_link %}
{% assign defaultImage = '/themes/theme1/assets/image/5643xcrwee3.png' | img_url %}

{% capture image_layout %}
  <div class="image-text__image {% if section.settings.is_width_across_screen %}image-text__image_m{% endif %}"> 
    <a class="common__img-wrapper_lazy"
      {% unless link_to_url.type != 'web' or link_to_url.url contains shop.domain %}
        target="_blank"
      {% endunless %}
      {% if link_to_url.url != '' %}
        href="{{ link_to_url.url }}"
        data-track="viewImage"
        data-track-url="{{ link_to_url.url }}"
      {% endif %}
      style="
        font-size: 0;
       {% if section.settings.is_width_across_screen %}
        padding-bottom: 0;
        {% else %}
        {% if image != ''  %}
        padding-bottom:{{ image.height | image_padding_bottom : image.width, origin: 'unlimit' }};
        {% else %}
        padding-bottom:70.4%;
        {% endif %}
        {% endif %}
        width: 100%;">
      {% if image != '' %}
        {% assign class = 'img-full-width' %}
        {% if link_to_url.url %}
        {% assign class = 'img-full-width' | append: ' common__img_hover' %}
        {% endif %}
        {% if section.settings.is_width_across_screen %}
        {% assign class= 'img-full-width' | append: ' position-static' %}       
        {% endif %}
        {% if section.settings.is_width_across_screen and link_to_url.url %}
        {% assign class= 'img-full-width' | append: ' position-static common__img_hover' %}       
        {% endif %}
        {% include 'lazyimg', src: image.src, style: "margin: auto;", class: class %}
      {% else %}
        <img src="{{ defaultImage }}" class="{% if section.settings.is_width_across_screen %}position-static{% endif %} "/>
      {% endif %}
    </a>
  </div>
{% endcapture %}

<div class="{% unless section.settings.is_width_across_screen %}row{% endunless %} image-text d-flex align-items-center mb-padding">
  {% if layout == "left" %}
    {{ image_layout }}
  {% endif %}
  <div class="image-text__text image-text__text_{{layout}}  text-{{text_layout}} {% if section.settings.is_width_across_screen %}px-14 flex-fill{% endif %}">
    {% if title != '' %}
      <div class="image-text__title"
      style="color:{{title_color}};"
      >{{ title | escape }}</div>
    {% endif %}
    {% if desc != '' %}
      <div class="image-text__desc xf-mce-view"
      style="color:{{text_color}};"
      >{{ desc }}</div>
    {% endif %}
    {% if button_label and button_link.url %}
      <a href="{{ button_link.url }}"
        {% unless button_link.type != 'web' or button_link.url contains shop.domain %}
          target="_blank"
        {% endunless %}
        class="btn image-text__btn" style="color:{{button_color}};border:1px solid {{button_border_color}};background-color:{{button_bg_color}};">
        {{ button_label | escape }}
      </a>
    {% endif %}
  </div>
  {% if layout == "right" %}
    {{ image_layout }}
  {% endif %}
</div>
</div>
</div>



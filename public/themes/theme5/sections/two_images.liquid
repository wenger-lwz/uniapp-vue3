<style>@media (max-width: 767.98px) {
  .two-image__image:last-child {
    margin-top: 0.9375rem;
    margin-bottom: 0.9375rem; } }

@media (min-width: 768px) {
  .two-image__row {
    margin: 0 -1.6875rem; }
  .two-image__image {
    padding: 0 0.75rem; } }
</style>
<div class="container container-gap">
  {% assign  text= section.settings.text %}
<div class="row two-image__row">
{% assign defaultImg = '/themes/theme1/assets/image/img2.png' %}

{% for i in (1..2) %}
  {% assign image_src = 'image_src_' | append: i %}
  {% assign link_url = 'url_' | append: i %}
  {% assign imageUrl = section.settings[image_src] %}
  {% assign linkToUrl = section.settings[link_url].url %}
  {% assign link_type = section.settings[link_url].type %}
  <div class="col-sm-12 col-md-6 two-image__image">
    <a class="common__img-wrapper_lazy {% if linkToUrl %}common__mask{% endif %} {%if shop.env == 1 and imageUrl == "" %}common__img-desc{% endif %}" data-title="Image-{{i}}"
      style="padding-bottom:{{ imageUrl.height | image_padding_bottom : imageUrl.width, origin: 'unlimit'}}; width:100%"
      {% if linkToUrl%}
        href="{{linkToUrl}}"
      {% endif %}
      {% if link_type == 'web' %}
        target="_blank"
      {% endif %}>
      {% assign src = imageUrl.src | default: defaultImg %}
      {% include 'lazyimg', src: src, class: 'img-full-width' %}
    </a>
  </div>
{% endfor %}
</div>
</div>

<style>@media (max-width:767.98px){.two-image__image:last-child{margin-top:.9375rem;margin-bottom:.9375rem}}@media (min-width:768px){.two-image__row{margin:0 -1.6875rem}.two-image__image{padding:0 .75rem}}</style>


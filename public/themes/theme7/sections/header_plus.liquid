{% javascript %}
  $(function () {
    $.header && $.header({
      id: '{{section.id}}',
      env: {{shop.env}},
      style: '{{section.settings.style}}',
      is_search_show: {{section.settings.is_search_show}},
      is_account_show: {{section.settings.is_account_show}}
    });
    $(window).on('resize header_event', function() {
      var w = $(window).width();
      if ( w < 768) {
        $('.nav_second-menu-icon').parent().addClass('nav_second-menu-icon-close');
      }
    }).trigger('header_event');
  })
{% endjavascript %}

